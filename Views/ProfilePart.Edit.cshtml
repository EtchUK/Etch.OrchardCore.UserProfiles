@using Etch.OrchardCore.UserProfiles.ViewModels;

@model ProfilePartViewModel

@{
    var readOnly = Model.UserName == string.Empty ? false : true;
}

<p class="small"><strong>Note:</strong> Creating a profile would also create a user in Orchard.</p>

<fieldset class="form-group" asp-validation-class-for="UserName">
    <label asp-for="UserName">@T["Username"]</label>
    <input asp-for="UserName" class="form-control content-preview-text content-caption-text" readonly="@(readOnly)" autofocus="autofocus" />
    <span asp-validation-for="UserName"></span>
    @if (!string.IsNullOrEmpty(Model.UserId))
    {
        <span class="hint">@T["Username of linked user."] <a href="@(Model.SiteURL == "/" ? Model.SiteURL : string.Format("{0}/", Model.SiteURL))Admin/Users/Edit/@Model.UserId">View User</a></span>
    }
</fieldset>
