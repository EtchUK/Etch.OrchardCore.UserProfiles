@model Etch.OrchardCore.UserProfiles.GroupField.Models.ProfileGroupFieldSettings

<fieldset class="form-group">
    <div class="row col-sm-6">
        <label asp-for="Hint">@T["Hint"]</label>
        <textarea asp-for="Hint" rows="2" class="form-control"></textarea>
        <span class="hint">@T["The hint text to display for this field on the editor."]</span>
    </div>
</fieldset>

<div class="form-group">
    <div class="custom-control custom-checkbox">
        @if(Model.Multiple)
        {
            <input type="checkbox" class="custom-control-input" asp-for="Multiple" asp-checked="checked" />
        }
        else
        {
            <input type="checkbox" class="custom-control-input" asp-for="Multiple" />
        }
        <label class="custom-control-label" asp-for="Multiple">@T["Multiple"]</label>
        <span class="hint">@T["If enabled the editor can select multiple items."]</span>
    </div>
</div>

<div class="form-group">
    <div class="custom-control custom-checkbox">
        @if (Model.Multiple)
        {
            <input type="checkbox" class="custom-control-input" asp-for="Required" asp-checked="checked" />
        }
        else
        {
            <input type="checkbox" class="custom-control-input" asp-for="Required" />
        }
        <label class="custom-control-label" asp-for="Required">@T["Required"]</label>
        <span class="hint">@T["If enabled the editor cannot select 'None' as an option."]</span>
    </div>
</div>
